<Window x:Class="WPFSimpleRegistrationForm.NameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFSimpleRegistrationForm"
        mc:Ignorable="d"
        Title="" Height="200" Width="200"
        Left="550" Top="280"
        ResizeMode = "NoResize">
    <Grid>
        <StackPanel>
            <Label Content="Please enter your" HorizontalAlignment="Center"/>
            <Label Content="Firstname:" HorizontalAlignment="Center"/>
            <TextBox Width="100" Height="20" HorizontalAlignment="Center" x:Name="firstname"/>
            <Label Content="Lastname:" HorizontalAlignment="Center"/>
            <TextBox Width="100" Height="20" HorizontalAlignment="Center" x:Name="lastname"/>
            <Button x:Name="okbutton" Width="40" Height="20" Content="OK" HorizontalAlignment="Center" Click="OkButton_click"/>
        </StackPanel>
    </Grid>
</Window>
